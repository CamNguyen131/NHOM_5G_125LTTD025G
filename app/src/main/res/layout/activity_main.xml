<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sản phẩm của tôi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="+ Thêm mới"
        android:backgroundTint="@color/bg_pink_light"
        android:textColor="@color/text_pink"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:layout_marginEnd="16dp"
        app:cornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_centerY_toEndOf="@id/tvTitle"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_search_rounded"
        android:hint="Tìm sản phẩm..."
        android:paddingStart="16dp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawableTint="@color/gray_text"
        android:drawablePadding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <LinearLayout
        android:id="@+id/layoutStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edtSearch">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:text="11"
                android:textStyle="bold"
                android:textColor="@color/text_pink"
                android:textSize="18sp" android:layout_height="10dp"/>
            <TextView
                android:text="Tổng sản phẩm"
                android:textSize="12sp"
                android:textColor="@color/gray_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:text="11"
                android:textStyle="bold"
                android:textColor="@color/green_stock"
                android:textSize="18sp"/>
            <TextView
                android:text="Còn hàng"
                android:textSize="12sp"
                android:textColor="@color/gray_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:text="0"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp"/>
            <TextView
                android:text="Hết hàng"
                android:textSize="12sp"
                android:textColor="@color/gray_text"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutStats">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_pill_pink"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Còn hàng"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_pill_gray"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hết hàng"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_pill_gray"
            android:textStyle="bold"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="#F5F5F5"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/layoutFilter"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="16dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_view"
                app:tint="@color/gray_text"/>
            <TextView
                android:text="Tổng quan"
                android:textSize="10sp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="@color/bg_pink_light"/>
            <TextView
                android:text="Sản phẩm"
                android:textSize="10sp"
                android:textColor="@color/text_pink"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/stat_notify_chat"
                app:tint="@color/gray_text"/>
            <TextView
                android:text="Tin nhắn"
                android:textSize="10sp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="@color/gray_text"/>
            <TextView
                android:text="Cá nhân"
                android:textSize="10sp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="#FFF"
        android:elevation="2dp">

        <!-- Nút Quay lại -->
        <LinearLayout
            android:id="@+id/btnBackChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="#FF80AB"/>

            <TextView
                android:text="Quay lại"
                android:textColor="#FF80AB"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Avatar -->
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_avatar_circle"
            android:gravity="center"
            android:text="N"
            android:textColor="#FF80AB"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="16dp"/>

        <!-- Tên và Trạng thái -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvUserName"
                android:text="Nguyễn Thị Lan"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="• Đang hoạt động"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Input Area (Bottom) -->
    <LinearLayout
        android:id="@+id/inputArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nhập tin nhắn..."
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:minHeight="48dp"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi"
            android:backgroundTint="#FF80AB"
            android:textColor="#FFF"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- Thay RecyclerView bằng ScrollView + LinearLayout -->
    <ScrollView
        android:id="@+id/scrollViewChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/inputArea"
        android:background="#FAFAFA"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/chatContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"/>
    </ScrollView>

</RelativeLayout>

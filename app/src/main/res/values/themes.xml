<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  Theme chính của app  -->
    <style name="Base.Theme.activity" parent="Theme.Material3.DayNight.NoActionBar"/>
    <style name="Theme.activity" parent="Base.Theme.activity"/>
    <!--  Theme chung (bạn đang dùng cho toàn app)  -->
    <style name="Theme.MaMade" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pink_primary</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/bg_light_grey</item>
    </style>
    <!--  SPLASH SCREEN – ĐÃ SỬA ĐÚNG TÊN  -->
    <style name="Theme.activity.Splash" parent="Theme.MaMade">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--  Theme cho Login/Register (nếu cần)  -->
    <style name="Theme.MaMade.Auth" parent="Theme.MaMade">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>